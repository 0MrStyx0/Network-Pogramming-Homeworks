<Window x:Class="Client2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="508">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Auto">
            <ListBox IsHitTestVisible="False" Margin="10" ItemsSource="{Binding MessageList}"></ListBox>
        </ScrollViewer>

        <DockPanel Grid.Row="1">
            <Button FontSize="25" Command="{Binding ShowDate}" CommandParameter="Date" Width="254">Date</Button>
            <Button FontSize="25" Command="{Binding ShowTime}" Width="254" CommandParameter="Time">Time</Button>
        </DockPanel>

    </Grid>
</Window>
